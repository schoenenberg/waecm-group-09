{
  "name": "banner",
  "version": "2.0.1",
  "description": "Banner Component",
  "keywords": [
    "web component",
    "web-component"
  ],
  "module": "dist/esm/banner.js",
  "main": "dist/esm/banner.js",
  "source": "lib/banner.ts",
  "types": "dist/esm/banner.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "rollup-watch": "rollup -c --watch",
    "serve": "live-server ./example",
    "copy-watch-esm": "onchange -v \"dist/esm/banner.js\" -- cp ./dist/esm/banner.js ./example/banner.esm.js",
    "copy-watch-iife": "onchange -v \"dist/iife/banner.js\" -- cp ./dist/iife/banner.js ./example/banner.iife.js",
    "start": "npm-run-all --parallel rollup-watch serve copy-watch-esm copy-watch-iife",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "gzip-check": "npx gzip-size-cli dist/esm/banner.min.js"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "react": "^16.13.1",
    "rollup": "^1.17.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.2",
    "typescript": "^3.5.3"
  }
}
